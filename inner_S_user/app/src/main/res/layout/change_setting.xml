<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <TextView
        android:id="@+id/password_masege"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center|left"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:text="설정"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/name_change_text"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ID : "
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/name_change_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="id 입력"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/URL_change_text"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="UVAdress : "
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/URL_change_edit"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="UVAdress 입력"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/Port_change_text"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="RFAdress : "
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/Port_change_edit"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="UVAdress 입력"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">
        <Button
            android:text="취소"
            android:textSize="20dp"
            android:id="@+id/btnCancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:scaleType="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        <Button
            android:text="확인"
            android:textSize="20dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:scaleType="center"/>
    </LinearLayout>
</LinearLayout>