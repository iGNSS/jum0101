<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="1dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/macaddrValue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Stag Setting"
                android:background="@color/blue"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="13pt" />

            <TextView
                android:id="@+id/macaddrValue2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Stag Adress"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rcount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" 단말기 타입"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />
            <Spinner
                android:id="@+id/tag_type_spinner"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="100sp"

                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accetitle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" 단말기 번호"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_no"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint=""
                android:textColor="@color/black"
                android:textColorHint="@color/blue"
                android:inputType="number"
                android:maxLength="8"
                android:text=""
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gyrotitle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" RF 파워"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/rfPower"
                android:layout_gravity="bottom"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                android:layout_width="100sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sensortitle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" 센서 타입"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/sensor_type"
                android:layout_gravity="bottom"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_background"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100sp"
                android:tooltipText="센서 종류 선택"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gyo_cal_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" 센서 보정 여부"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/gyo_cal"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:paddingStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text=""
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caltitle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text=" 센서 보정 선택"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/cal_run"
                android:layout_gravity="bottom"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_background"
                android:layout_width="100sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="동작 주기"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/operation_cycle_mode_Spinner"
                android:layout_gravity="bottom"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_background"
                android:layout_width="100sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="분"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="O2 알람값 "
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_O2_edit"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint="0 ~ 25"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:text=""
                android:textSize="10pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="CO 알람값"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_CO_edit"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint="0 ~ 2550"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="number"
                android:maxLength="4"
                android:text=""
                android:textSize="10pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="ppm"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="H2S 알람값"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_H2S_edit"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint="0 ~ 255"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="number"
                android:maxLength="3"
                android:text=""
                android:textSize="10pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="ppm"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="CO2 알람값"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_CO2_edit"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint="0 ~ 60000"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="number"
                android:maxLength="4"
                android:text=""
                android:textSize="10pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="ppm"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="CH4 알람값"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/tag_CH4_edit"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:background="@drawable/textview_design"
                android:hint="0 ~ 60000"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="number"
                android:maxLength="4"
                android:text=""
                android:textSize="10pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="ppm"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
                android:id="@+id/bottom2Layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sendTotag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/blue"
                    android:backgroundTint="@color/blue"
                    android:textColor="#ffffff"
                    android:textSize="12pt"
                    android:includeFontPadding="false"
                    android:text="@string/str_sendtotag" />


            </LinearLayout>

    </LinearLayout>
</LinearLayout>